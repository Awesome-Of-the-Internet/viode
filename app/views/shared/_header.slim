header
  nav.navbar.navbar-default
    .container
      .navbar-header
        button.navbar-toggle.collapsed type="button" data-toggle="collapse" data-target="#navbar-collapse"
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        = link_to Rails.application.secrets.site_name, root_path, class: 'navbar-brand'

      .collapse.navbar-collapse#navbar-collapse
        ul.nav.navbar-nav
          li class=('active' if controller_name == 'questions' && action_name == 'index')
            = link_to 'Questions', questions_path
          li class=('active' if controller_name == 'categories' && action_name == 'index')
            = link_to 'Categories', categories_path
        = form_tag search_path, method: :get, class: 'navbar-form navbar-left' do
          .form-group
            = search_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search..'
        ul.nav.navbar-nav.navbar-right
          li class=('active' if controller_name == 'questions' && action_name == 'new')
            = link_to 'Ask question', new_question_path
          - if user_signed_in?
            li.dropdown
              = link_to current_user.username, current_user, class: 'dropdown-toggle', data: { toggle: 'dropdown' }
              ul.dropdown-menu
                li = link_to 'Profile', current_user
                li = link_to 'Settings', settings_profile_path
                li.divider
                li = link_to 'Sign out', destroy_user_session_path, method: :delete
            - if current_user.admin?
              li class=(controller_name == 'dashboard' ? 'active' : '')
                = link_to 'CP', admin_dashboard_path, title: 'Control Panel'
          - else
            li = link_to 'Sign in', new_user_session_path
